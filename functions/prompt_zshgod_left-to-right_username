# Function which returns colored arrow with current username with different color if current user is root
function prompt_zshgod_left-to-right_username() {
	print "%(!,%F{$ZSHGOD_THEME_CATPPUCCIN_RED}%S %K{$ZSHGOD_THEME_CATPPUCCIN_CRUST}%n%k %s%f,%F{$ZSHGOD_THEME_CATPPUCCIN_GREEN}%S %K{$ZSHGOD_THEME_CATPPUCCIN_CRUST}%n%k %s%f)"
}
