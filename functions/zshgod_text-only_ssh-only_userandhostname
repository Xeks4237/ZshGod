# Function which returns zshgod_rectangular_userandhostname only when connected to ssh
function zshgod_text-only_ssh-only_userandhostname() {
	# Allow passing args to function for changing foreground color
	local user_fg_color=$1
	local root_fg_color=$2
	local dog_fg_color=$3
	local hostname_fg_color=$4

	[[ -n $SSH_CONNECTION ]] && zshgod_rectangular_userandhostname $user_fg_color $root_fg_color $dog_fg_color $hostname_fg_color
}
