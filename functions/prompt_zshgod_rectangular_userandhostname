# Function which shows arrow with current username@hostname
function prompt_zshgod_rectangular_userandhostname() {
	# Allow passing args to function for changing foreground and background colors
	local bg_color=$1
	local fg_color=$2

	print "%(!,%F{$fg_color}%K{$bg_color} %n %k%f,%F{$fg_color}%K{$bg_color} %n %k%f) %F{$fg_color}%K{$bg_color} @ %f%k %F{$fg_color}%K{$bg_color} %m %k%f"
}
