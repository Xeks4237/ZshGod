# Function which shows arrow with current username@hostname
function zshgod_text-only_userandhostname() {
	# Allow passing args to function for changing foreground color
	local user_fg_color=$1
	local root_fg_color=$2
	local dog_fg_color=$3
	local hostname_fg_color=$4

	print "%(!,%F{$root_fg_color}%n%f,%F{$user_fg_color}%n%f)%F{$dog_fg_color}@%f%F{$hostname_fg_color}%m%f"
}
