# Function for checking git repos if they are dirty
function zshgod_text-only_git_dirty() {
	# Allow passing args to function for changing foreground color
	local fg_color=$1

	# Check if we're in a git repo
	[[ $(zshgod_vcs_system) == 'git' ]] || return

	# Checks if it's dirty
	local umode="-uno"
	command test -n "$(git status --porcelain --ignore-submodules ${umode} 2>/dev/null | head -100)"

	# Prints "*" if repo is dirty
	(($? == 0)) && print "%F{$fg_color}*%f"
}
