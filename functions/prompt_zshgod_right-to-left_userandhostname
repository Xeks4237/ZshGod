# Function which shows arrow with current username@hostname
function prompt_zshgod_right-to-left_userandhostname() {
	# Allow passing args to function for changing foreground and background colors
	local bg_color=$1
	local fg_color=$2

	print "%(!,%F{$bg_color}%S %K{$fg_color}%n%k %s%f,%F{$bg_color}%S %K{$fg_color}%n%k %s%f)%F{$bg_color}%S %K{$fg_color}@%k %s%f%F{$bg_color}%S %K%m%k %s%f"

}
