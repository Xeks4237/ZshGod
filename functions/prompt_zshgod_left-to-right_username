# Function which returns colored arrow with current username with different color if current user is root
function prompt_zshgod_left-to-right_username() {
	# Allow passing args to function for changing foreground and background colors
	local user_bg_color=$1
	local user_fg_color=$2
	local root_bg_color=$3
	local root_fg_color=$4

	$PROMPT_ZSHGOD_LEFT_TO_RIGHT_USERNAME="%(!,%F{$root_bg_color}%S %K{$root_fg_color}%n%k %s%f,%F{$user_bg_color}%S %K{$user_fg_color}%n%k %s%f)"
}
