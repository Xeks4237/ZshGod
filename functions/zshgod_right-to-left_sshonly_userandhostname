# Function which returns zshgod_right-to-left_userandhostname only when connected to ssh
function zshgod_right-to-left_sshonly_userandhostname() {
	# Allow passing args to function for changing foreground and background colors
	local user_bg_color=$1
	local user_fg_color=$2
	local root_bg_color=$3
	local root_fg_color=$4
	local dog_bg_color=$5
	local dog_fg_color=$6
	local hostname_bg_color=$7
	local hostname_fg_color=$8

	[[ -n $SSH_CONNECTION ]] && zshgod_right-to-left_userandhostname $user_bg_color $user_fg_color $root_bg_color $root_fg_color $dog_bg_color $dog_fg_color $hostname_bg_color $hostname_fg_color
}
