# Function which returns branch/subversion info about current vcs
prompt_zshgod_right-to-left_vcs_branch() {
	# zstyle options to customize look of vcs_info
	zstyle ':vcs_info:*' actionformats '%b|%a'
	zstyle ':vcs_info:*' formats '%b'
	zstyle ':vcs_info:(sv[nk]|bzr):*' branchformat '%b:%r'

	# Run vcs_info to get/update vcs info
	vcs_info

	# Check if $vcs_info_msg_0_ is emplty and if not prints vcs branch info
	if [[ -n $vcs_info_msg_0_ ]]; then
		local msg=$vcs_info_msg_0_
		print "%F{$ZSHGOD_THM_CATPPUCCIN_GREEN}%S %K{$ZSHGOD_THM_CATPPUCCIN_CRUST}$msg%k %s%f"
	fi
}
