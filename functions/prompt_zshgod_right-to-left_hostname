# Function which returns colored arrow with current hostname
function prompt_zshgod_right-to-left_hostname() {
	# Allow passing args to function for changing foreground and background colors
	local bg_color=$1
	local fg_color=$2

	PROMPT_ZSHGOD_RIGHT_TO_LEFT_HOSTNAME="%F{$bg_color}%S %K{$fg_color}%m%k %s%f"
}
