# Function which shows arrow with current username@hostname
prompt_zshgod_right-to-left_userandhostname() {
	print "%(!,%F{$ZSHGOD_THM_CATPPUCCIN_RED}%S %K{$ZSHGOD_THM_CATPPUCCIN_CRUST}%n%k %s%f,%F{$ZSHGOD_THM_CATPPUCCIN_GREEN}%S %K{$ZSHGOD_THM_CATPPUCCIN_CRUST}%n%k %s%f)%F{$ZSHGOD_THM_CATPPUCCIN_YELLOW}%S %K{$ZSHGOD_THM_CATPPUCCIN_CRUST}@%k %s%f%F{$ZSHGOD_THM_CATPPUCCIN_SKY}%S %K%m%k %s%f"

}
